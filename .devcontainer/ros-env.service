[Unit]
Description=ROS Environment Setup
After=multi-user.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'echo "source /opt/ros/humble/setup.bash" >> /home/devuser/.bashrc'
ExecStart=/bin/bash -c 'echo "source /opt/ros/humble/setup.bash" >> /root/.bashrc'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target